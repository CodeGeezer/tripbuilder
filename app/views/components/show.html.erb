

<h1> ******* TripBuilder! ******** </h1>
<h2> Component Search Results </h2>


<table class="table table-hover"  >
  <thead>
    <tr>
    <div>
      <th><h3>Component Name</h3></th>
      <th><h3>Description</h3></th>
      <th><h3>Latitude</h3></th> 
      <th><h3>Longitude</h3></th>

    </div>
    </tr>
  </thead>

 <tbody>
 <tr> 
  <% @component.each do |m| %>
   <td class="active"><%= m.name %> </td>
   <td class="active"><%= m.description %>  </td>
   <td class="active"><%= m.lat%>  </td>
   <td class="active"><%= m.lon%>  </td>
   </tr>
   <% end %>
</tbody>
</table>
   
<div>
<td><%= link_to 'New', new_component_path %>  
 <%= link_to 'Back', components_path %>
 <%= link_to 'Trips' , trips_path %>
 </td>
</div>
  
