<% if @component.errors.any? %>
<h2> ERRORS YOU IDIOT</h2>
<u1>
<% @component.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</u1>
<% end %>


<h1> ******* TripBuilder! ******** </h1>
<h2> Create a new component </h2>


<%= form_for(@component) do |f| %>
	<div class "field">
	<%= f.label :name %><br>
	<%= f.text_field :name %>
	</div>
	
	<div class = "field">
	<%= f.label :description %><br>
	<%= f.text_field :description %>
	</div>

    <div class = "field">
	<%= f.label :start %><br>
	<%= f.date_field :start %>
	</div>

    <div class = "field">
	<%= f.label :end %><br>
	<%= f.date_field :end %>
	</div>

    <div class = "field">
	<%= f.label :lat %><br>
	<%= f.text_field :lat %>
	</div>

    <div class = "field">
	<%= f.label :lon %><br>
	<%= f.text_field :lon %>
	</div>

	<%= f.submit %>
	<% end %>
	
<td>
<%= link_to 'Home', components_path %>  
</td>