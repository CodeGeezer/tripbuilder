


<h1> ******* TripBuilder! ******** </h1>
<h2> Search Results </h2>

<table class="table table-hover" >
  <thead>
    <tr>
    <div>
      <th><h3>Trip Name</h3></th>
      <th><h3>Theme</h3></th>
      <th><h3>Description</h3></th>
      <th><h3>Region</h3></th>
      <th><h3>Start</h3></th>
      <th><h3>End</h3></th>
    </div>
    </tr>
  </thead>

 <tbody>
 <tr> 
  <% @trip.each do |m| %>
   <td class="active"> <%= m.name %> </td>
   <td class="active"> <%= m.theme %>  </td>
   <td class="active"> <%= m.description %>  </td>
   <td class="active"> <%= m.region %>  </td>
   <td class="active"> <time><%= m.start %></time></td>
   <td class="active"> <time><%= m.end %></time> </td>
   <td><%= link_to 'Edit Trip', edit_trip_path(["#{m.id}"]) %> </td>
   </tr>
   <% end %>
</tbody>
</table>
   
<div>
<td>
 <%= link_to 'New', new_trip_path %>  
 <%= link_to 'Back', trips_path %>  
 
 <%= link_to 'Components', components_path %>
 <%= link_to 'Add Components', new_component_path %>
</td>
</div>
  


